            <sentence>
                <offset>0</offset>
                <text>A 5-y-old boy, who was the third child of consanguineous parents, was evaluated for short stature.</text>
                <annotation id="1">
                    <infon key="type">webanno.custom.Phenotypes</infon>
                    <infon key="HPOterm">http://purl.obolibrary.org/obo/HP_0004322</infon>
                    <location length="13" offset="84"/>
                    <text>short stature</text>
                </annotation>
            </sentence>
            <sentence>
                <offset>99</offset>
                <text>He had sparse hair since birth.</text>
                <annotation id="2">
                    <infon key="type">webanno.custom.Phenotypes</infon>
                    <infon key="HPOterm">http://purl.obolibrary.org/obo/HP_0008070</infon>
                    <location length="11" offset="7"/>
                    <text>sparse hair</text>
                </annotation>
            </sentence>
            <sentence>
                <offset>131</offset>
                <text>He never had recurrent infections.</text>
            </sentence>
            <sentence>
                <offset>166</offset>
                <text>His development was normal and he was attending normal school.</text>
            </sentence>
            <sentence>
                <offset>229</offset>
                <text>On examination, he had hypopigmented sparse hair.</text>
                <annotation id="3">
