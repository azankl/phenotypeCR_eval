                    <node refid="38" role="target"/>
                </relation>
            </sentence>
            <sentence>
                <offset>2491</offset>
                <text>There was a prominent umbilicus and a narrow chest with pectus excavatus.</text>
                <annotation id="42">
                    <infon key="type">webanno.custom.Phenotypes</infon>
                    <infon key="HPOterm">http://purl.obolibrary.org/obo/HP_0001544</infon>
                    <location length="19" offset="12"/>
                    <text>prominent umbilicus</text>
                </annotation>
                <annotation id="43">
                    <infon key="type">webanno.custom.Phenotypes</infon>
                    <infon key="HPOterm">http://purl.obolibrary.org/obo/HP_0000774</infon>
                    <location length="12" offset="38"/>
                    <text>narrow chest</text>
                </annotation>
                <annotation id="44">
                    <infon key="type">webanno.custom.Phenotypes</infon>
                    <infon key="HPOterm">http://purl.obolibrary.org/obo/HP_0000767</infon>
                    <location length="16" offset="56"/>
